USER_AGENT=Mozilla/5.0 (compatible; KidSearch-Crawler/2.0)
MEILI_URL=http://localhost:7700
MEILI_KEY=your_key_here
INDEX_NAME=kidsearch
MAX_RETRIES=3
TIMEOUT=15
DEFAULT_DELAY=0.5
BATCH_SIZE=20
CACHE_DAYS=7

# Paramètres de parallélisation
CONCURRENT_REQUESTS=5    # Nombre de pages crawlées en parallèle
MAX_CONNECTIONS=100      # Pool de connexions HTTP
DEFAULT_DELAY=0.5        # Délai minimum entre requêtes

# API Backend Configuration (optional - for KidSearch backend mode)
API_ENABLED=false        # Enable FastAPI backend server
API_HOST=0.0.0.0        # API server host
API_PORT=8080           # API server port
API_WORKERS=4           # Number of Uvicorn workers

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0  # Dashboard server host
DASHBOARD_PORT=8501     # Dashboard server port (Streamlit default)

# Docker Service Mode (for unified Docker deployment)
SERVICE=all             # Options: all (dashboard+api), dashboard, api

# Google Custom Search Engine (for unified search)
GOOGLE_CSE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_search_engine_id_here
CSE_DAILY_QUOTA=100     # Daily API quota limit (100 for free tier)
CSE_CACHE_DAYS=7        # Days to cache CSE results

# Reranking Configuration
RERANKING_ENABLED=true  # Enable semantic reranking
RERANKER_MODEL=Snowflake/snowflake-arctic-embed-m  # HuggingFace model name
# Options: snowflake-arctic-embed-xs (fastest), -s, -m (balanced), -l (best quality)

# Search Merger Configuration
MEILISEARCH_WEIGHT=0.7  # Weight for local Meilisearch results (0-1)
CSE_WEIGHT=0.3          # Weight for Google CSE results (0-1)